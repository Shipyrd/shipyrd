<%= turbo_stream_from server %>

<article id="<%= dom_id server %>">
  <kbd><%= server.host %></kbd>

  <% if server.last_connected_at.present? %>
    <aside class="aside_naked">
      <small>
        Last connected 
        <time class="timeago" datetime="<%= server.last_connected_at %>">
          <%= time_ago_in_words(server.last_connected_at) %> ago
        </time>
      </small>
    </aside>
  <% end %>
</article>