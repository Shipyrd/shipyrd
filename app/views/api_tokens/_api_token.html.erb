<div id="<%= dom_id api_token %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Token:</strong>
    <%= api_token.token %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this api token", api_token, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this api token', edit_api_token_path(api_token), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
