<div id="<%= dom_id application %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= application.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Url:</strong>
    <%= application.url %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Environment:</strong>
    <%= application.environment %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Repository url:</strong>
    <%= application.repository_url %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this application", application, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this application', edit_application_path(application), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
