<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing <%= @application.display_name %></h1>

  <%= render "form", application: @application %>

  <%= link_to "View", @application, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy", application_path(@application), method: :delete, class: "ml-2 rounded-lg py-3 px-5 bg-red-100 inline-block font-medium" %>
  </div>
</div>
