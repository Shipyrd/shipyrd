<%= render "invite_links" %>

<div id="users">

  <% if @memberships.present? %>
    <% @memberships.group_by(&:role).each do |role, members| %>
      <h4 class="is-size-4 mt-3">
        <%= role.humanize.pluralize %>
      </h4>

      <% members.in_groups_of(10, false).each do |row| %>

        <div class="box">
          <div class="level">

              <div class="level-left">
                <% row.each do |member|%>
                  <div class="mr-4 level-item">
                    <%= render member.user %>
                  </div>
                <% end %>
              </div>
            </div>

          </div>
        </div>

      <% end %>

    <% end %>
  <% end %>

</div>
