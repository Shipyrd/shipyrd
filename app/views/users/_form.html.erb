<%= form_with model: user, url: users_path(code: params[:code]) do |form| %>
  <%= render "shared/errors", form: form %>

  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :username, "GitHub username", class: "label" %>
    <div class="control">
      <%= form.text_field :username, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :email, class: "label" %>
    <div class="control">
      <%= form.text_field :email, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :password, class: "label" %>
    <div class="control">
      <%= form.password_field :password, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.submit class: "button is-primary" %>
  </div>
<% end %>
